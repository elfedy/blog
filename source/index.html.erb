---
pageable: true
per_page: 10
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<div class="article-index" itemscope itemtype="http://schema.org/blogPosts">
  <% page_articles.each_with_index do |article, i| %>
    <div class="article-summary__container">
      <article itemscope itemtype="http://schema.org/BlogPosting">
        <time class="article__date"><%= article.date.strftime('%Y %b %e') %></time>
        <h2 itemprop="name headline"><%= link_to article.title, article %></h2>
        <div>
          <%= article.summary %>
        </div>
      </article>
    </div>
  <% end %>
</div>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
